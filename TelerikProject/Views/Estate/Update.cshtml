<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="@ViewBag.estate.Name">
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="0">
                <label class="form-check-label" for="inlineRadio1">House</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="type" id="inlineRadio2" value="1">
                <label class="form-check-label" for="inlineRadio2">Flat</label>
            </div>
            <div class="form-group">
                <label>Cost</label>
                <input type="number" class="form-control" id="cost" name="cost" placeholder="Cost" value="@ViewBag.estate.Cost">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Description" value="@ViewBag.estate.Description">
            </div>
            <kendo-button name="submit" type="submit" class="k-primary">Submit</kendo-button>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
